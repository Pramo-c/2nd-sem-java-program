import java.util.Scanner;

class Main{
	
	// febonacci series with recursive function
	static int febonacci(int n){
		if(n<=1){
			return n;
		}else{
			return febonacci(n-1)+febonacci(n-2);
			
		}
	}
	// Febonacci series with non recursive function
	static void Febonacci(int num)
	{
		int i,a=0,b=1;
		System.out.print("Fibonacci serise(non-recursive):");
		for(i=0;i<num;i++)
		{
			System.out.print(a+" ");
			int temp=a+b;
			a=b;
			b=temp;
			
		}
		System.out.println();
		
	}
	// find factorial with recursive function
	static int factorial(int num)
	{	
	
		if(num==1 || num==0)
		{
			return 1;
		}
		else
		{
			return num*factorial(num-1);
		}
		
	}
	
	// find factorial with non-recursive function
	static int Factorial(int num)
	{
		int i,multi=1;
		for(i=1;i<=num;i++)
		{
			multi *= i;
		}
		return multi;
		
	}

	
	public static void main(String[] args){
		Scanner input=new Scanner(System.in);
		int num;
		System.out.println("enter the value of febonacci:");
		num=input.nextInt();
		
		System.out.print("Fibonacci Series(recursive): ");
		for(int i=0;i<num;i++)
		{
			System.out.print(febonacci(i)+" ");
			
		}
		System.out.println();
		
		Febonacci(num);
		
		int value=factorial(num);
		System.out.println("Factorial value (recursive):"+value);
		value=Factorial(num);
		System.out.println("Factorial value (non-recursive):"+value);
	
	}
}
